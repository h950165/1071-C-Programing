#include<stdio.h>

int main()
{
 int n1;
 int n2;
 int addition;
 int subtraction;
 int Multiplication;
 int Division;
 int remainder;
 printf("Enter two integers: ");

 scanf("%d %d",&n1,&n2) ;

 addition=n1 + n2 ;
 printf(" %d + %d = %d \n",n1,n2,addition) ;

 subtraction=n1 - n2 ;
 printf(" %d - %d = %d \n",n1,n2,subtraction) ;

 Multiplication=n1 * n2 ;
 printf(" %d * %d = %d \n",n1,n2,Multiplication) ;

 Division=n1 / n2 ;
 printf(" %d / %d = %d \n",n1,n2,Division) ;

 remainder=n1 % n2 ;
 printf(" %d % %d = %d \n",n1,n2,remainder) ;
}
