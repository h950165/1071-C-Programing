#include<stdio.h>

int main()
{   int choice;
    int length;
    int width;
    int type;
    while(1)
    {
        printf("main menu:\n");
        printf("1.retange\n");
        printf("2.triangle\n");
        printf("3.Exit\n");
        printf("=> ");
        scanf("%d,&choice");
        if(choice==3)break;
        switch(choice)
        {
        case 1:
            printf("Enter length and width :");
            scanf("%d %d",&length,&width );
            for(int i=1;i<=length;i++)
            {
                for(int j=1;j<=width;j++)
                {
                  if(i==1 || i==length|| j==1||j==width)
                      printf("*");
                  else
                      printf(" ");
                }
			    printf("\n");
            }


         break;
         }



	}
}

